{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "mollieweb-chatbot",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/admin.html"
    },
    {
      "source": "/test-chat",
      "destination": "/test-chat.html"
    },
    {
      "source": "/document-upload",
      "destination": "/document-upload.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-summary",
      "schedule": "59 10 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60
    }
  }
}
