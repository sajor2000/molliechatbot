{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.examples.ts",
    "src/services/analytics.service.ts",
    "src/services/mongodb.service.ts.unused",
    "src/services/scheduler.service.ts",
    "src/services/storage.service.ts",
    "src/routes/**/*",
    "src/scripts/**/*",
    "src/server.ts"
  ]
}
